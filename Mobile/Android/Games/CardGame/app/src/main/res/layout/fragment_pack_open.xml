<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackOpenFragment"
    android:background="@drawable/linen_background"
    >


    <FrameLayout
        android:layout_width="395dp"
        android:layout_height="643dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/card_man" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card_Rarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="115dp"
                android:text="5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_Atk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="380dp"
                android:text="10"
                app:layout_constraintStart_toStartOf="@+id/card_Rarity"
                app:layout_constraintTop_toBottomOf="@+id/card_Rarity" />

            <TextView
                android:id="@+id/card_HP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="252dp"
                android:text="10"
                app:layout_constraintStart_toEndOf="@+id/card_Atk"
                app:layout_constraintTop_toTopOf="@+id/card_Atk" />

            <TextView
                android:id="@+id/card_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="8dp"
                android:text="Gumptious Ted"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/card_Rarity"
                app:layout_constraintTop_toTopOf="@+id/card_Rarity" />

            <TextView
                android:id="@+id/card_Flavor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="192dp"
                android:text="Flavor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_Title" />

            <TextView
                android:id="@+id/card_Flavor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Flavor"
                app:layout_constraintEnd_toEndOf="@+id/card_Flavor1"
                app:layout_constraintStart_toStartOf="@+id/card_Flavor1"
                app:layout_constraintTop_toBottomOf="@+id/card_Flavor1" />

            <TextView
                android:id="@+id/card_Flavor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Flavor"
                app:layout_constraintEnd_toEndOf="@+id/card_Flavor2"
                app:layout_constraintStart_toStartOf="@+id/card_Flavor2"
                app:layout_constraintTop_toBottomOf="@+id/card_Flavor2" />
        </android.support.constraint.ConstraintLayout>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>